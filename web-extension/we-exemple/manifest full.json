{
	"manifest_version": 2,
	"name": "we-exemple",
	"description": "tutoriel de grafikart pour cr√©er une we chrome",
	"version": "1.0",
	"permissions": [ "http://*/*", "https://*/*", "activeTab", "tabs" ],
	"icons": { "128" : "icon-128.png" },
	// pour afficher une popup
	"browser_action": {
		"default_icon" : "icon-128.png",
		"default_popup": "popup.html",
		"default_title": "we-exemple"
	},
	// utiliser du js dans la popup
	"background": { "scripts": ["popup.js"] },
	// lancer une we sans popup. je peux aussi utiliser browser_action
	"page_action": {
		"default_icon" : "icon-128.png",
		"default_title": "we-exemple",
		"browser_style": true
	},
	// utiliser du code ou des styles dans la page web que je visite
	"content_scripts": [{
		"matches": ["<all_urls>"],
	//	"matches": ["http://google.fr", "http://google.com"],
		"css": ["structure.css", "perso.css"],
		"js": ["page.js"]
	}],
	"web_accessible_resources": [ "icon-128.png"]
}