{
	"manifest_version": 2,
	"name": "we-exemple",
	"description": "tutoriel de grafikart pour cr√©er une we chrome",
	"version": "1.0",
	"permissions": [ "http://*/*", "https://*/*", "activeTab", "tabs" ],
	"icons": { "128" : "icon-128.png" },
	// lancer une we sans popup. je peux aussi utiliser browser_action
	"page_action": {
		"default_icon" : "icon-128.png",
		"default_title": "we-exemple",
		"browser_style": true
	},
	// utiliser du js dans la popup
	"background": { "scripts": ["popup.js"] },
}